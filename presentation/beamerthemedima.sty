% farben definieren
\definecolor{dimalightblue}{RGB}{221,231,242}
\definecolor{dimablue}{RGB}{199,218,241}
\definecolor{dimadarkblue}{RGB}{22,56,94}
\definecolor{dimaseplineblue}{RGB}{74,126,187}

% farben zuweisen
\setbeamercolor{normal text}{fg=dimadarkblue,bg=white}
\setbeamercolor{item}{fg=dimadarkblue,bg=white}
\setbeamercolor{section in toc}{fg=dimadarkblue,bg=white}
\setbeamercolor{logo}{fg=dimadarkblue,bg=white}

\setbeamercolor{palette primary}{use=structure,fg=black,bg=dimablue}
\setbeamercolor{palette secondary}{use=structure,fg=black,bg=dimablue}
\setbeamercolor{palette tertiary}{use=structure,fg=black,bg=dimablue}
\setbeamercolor{palette quaternary}{use=structure,fg=black,bg=dimablue}
\setbeamercolor{sidebar}{use=structure,bg=dimadarkblue}
\setbeamercolor*{titlelike}{use=structure,fg=dimadarkblue,bg=dimalightblue}

\setbeamercolor{palette sidebar primary}{use=normal text,fg=normal text.fg}
\setbeamercolor{palette sidebar secondary}{use=structure,fg=structure.fg}
\setbeamercolor{palette sidebar tertiary}{use=normal text,fg=normal text.fg}
\setbeamercolor{palette sidebar quaternary}{use=structure,fg=structure.fg}

\setbeamercolor{section in head/foot}{parent=palette tertiary}
\setbeamercolor{subsection in head/foot}{parent=palette secondary}
\setbeamercolor{author in head/foot}{parent=subsection in head/foot}
\setbeamercolor{title in head/foot}{parent=section in head/foot}

\setbeamercolor{lower separation line frametitle}{bg=dimaseplineblue}
\setbeamercolor{upper separation line foot}{bg=dimaseplineblue}

\setbeamercolor{block title}{use=structure,fg=dimadarkblue}

\defbeamertemplate*{itemize subitem}{miniframes theme}{\tiny\raise1.5pt\hbox{\donotcoloroutermaths$\blacksquare$}}
\defbeamertemplate*{itemize subsubitem}{miniframes theme}{\raise1.5pt\hbox{\donotcoloroutermaths$\bullet$}}


% Head
\defbeamertemplate*{headline}{miniframes theme}
{%
  \begin{beamercolorbox}[colsep=1.5pt]{upper separation line head}
  \end{beamercolorbox}
  \begin{beamercolorbox}{section in head/foot}
  \vskip2pt\insertnavigation{\paperwidth}\vskip2pt
  \end{beamercolorbox}
  \begin{beamercolorbox}[colsep=1.5pt]{lower separation line head}
  \end{beamercolorbox}
}


% Frame title
\defbeamertemplate*{frametitle}{miniframes theme}
{
  \nointerlineskip
  \begin{beamercolorbox}[wd=\paperwidth]{frametitle}
  \usebeamerfont{frametitle} \hspace{0.1cm} \raisebox{-0.6cm}{\parbox[t][0.6cm][t]{11cm}{\insertframetitle}}%
  \hfill \raisebox{-0.13cm}{\parbox[t]{1cm}{\insertlogo}} \hspace{0.1cm}
  \end{beamercolorbox}
  \nointerlineskip
  \begin{beamercolorbox}[wd=\paperwidth,colsep=0.3pt]{lower separation line frametitle}
  \end{beamercolorbox}  
}

% bottom right corner
\defbeamertemplate*{sidebar right}{miniframes theme}
{
  \vfill%
  %\llap{\insertlogo\hskip0.1cm}%
  \vskip2pt%
  \llap{\usebeamertemplate***{navigation symbols}\hskip0.1cm}%
  \vskip2pt%
}

% footer
\defbeamertemplate*{footline}{miniframes theme}
{%
  	\begin{beamercolorbox}[colsep=.3pt]{upper separation line foot}\end{beamercolorbox}
    
	\begin{beamercolorbox}[sep=.05cm,leftskip=.05cm,rightskip=.3cm]{author in head/foot}
   	\includegraphics[width=0.3cm]{tulogo} 
    \hfill   
    \parbox[b][0.2cm][c]{\linewidth}{\usebeamerfont{author in head/foot}\insertshortauthor}
    \hfill
    \parbox[b][0.2cm][c]{0cm}{\usebeamerfont{framenumber}\insertframenumber}
	\end{beamercolorbox}%
}

